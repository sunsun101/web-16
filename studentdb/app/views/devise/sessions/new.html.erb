
<div class="col-md-4 offset-md-4">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Log in</h4>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-outline mb-4">
          <%= f.email_field :email, type: 'email', class: 'form-control' %>
          <%= f.label :email, class: 'form-label' %>
        </div>

        <div class="form-outline mb-4">
          <%= f.password_field :password, class: 'form-control' %>
          <%= f.label :password, class: 'form-label' %>
        </div>

        <div class="mb-4">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label' %>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-4">Log in</button>
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-block mb-1' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-block mb-1' %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name),
                    class: 'btn btn-block mb-1' %>
      <% end %>

    </div>
  </div>
</div>
