
<div class="col-md-4 offset-md-4">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Projects</h4>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Url</th>
            <% if user_signed_in? %>
              <th colspan="3">Actions</th>
            <% else %>
              <th colspan="1"></th>
            <% end %>
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.name %></td>
              <td><%= project.url %></td>
              <td>
                <%= link_to project do %>
                  <span title="Show"><i class="fa fa-eye"></i></span>
                <% end %>
              </td>
              <% if user_signed_in? %>
                <td>
                  <%= link_to edit_project_path(project) do %>
                    <span title="Edit"><i class="fa fa-edit"></i></span>
                  <% end %>
                </td>
                <td>
                  <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <span title="Delete"><i class="fa fa-trash"></i></span>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if user_signed_in? %>
        <%= link_to 'New Project', new_project_path, class: "btn btn-primary", role: "button" %>
      <% end %>
    </div>
  </div>
</div>
