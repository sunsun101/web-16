<%= form_with(url:'/site/users' , method: :patch, remote: true) do |f| %>
  <div class="form-row" >
    <%= f.hidden_field :id, value:"" ,id: "user_id"%>
  </div>
  <div class="form-group row col-12" >
    <%= f.label 'Email: ', class:"col-sm-3 col-form-label"%>
    <%= f.text_field :email, id: "email"%>
  </div>
  <br>
  <div class="form-group row col-12" >
    <%= f.label 'Make Admin: ', class:"col-sm-3 col-form-label"%>
    <div class="col-sm-2">
      <%= f.check_box :is_admin, class:"form-check-input", id: "is_admin"%>
    </div>
  </div>
  <br>
  <div class="form-row">
    <div style="float:right;" ><button type="button" class="btn btn-secondary" data-mdb-dismiss="modal" style="margin-right: 10px;"> Close</button><%= f.submit 'Save changes', class: "btn btn-su" %></div>
  </div>
  <br>
<% end %>
